{
  "name": "nerv",
  "version": "1.0.0",
  "description": "Neural Evolution & Repository Vectoring - AI-Orchestrated Multi-Repository Development",
  "type": "module",
  "main": "./out/main/index.js",
  "bin": {
    "nerv": "./out/cli/index.js"
  },
  "exports": {
    ".": "./out/main/index.js",
    "./core": "./out/core/index.js",
    "./cli": "./out/cli/index.js"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:cli": "tsc -p tsconfig.cli.json",
    "cli": "node out/cli/index.js",
    "build:hooks": "cd cmd/nerv-hook && go build -ldflags=\"-s -w\" -o ../../resources/nerv-hook-windows-amd64.exe .",
    "build:hooks:all": "scripts/build-hook.bat",
    "build:mcp": "npm run build:mcp:context && npm run build:mcp:progress && npm run build:mcp:docs",
    "build:mcp:context": "cd src/mcp/nerv-context && npm install && npm run build",
    "build:mcp:progress": "cd src/mcp/nerv-progress && npm install && npm run build",
    "build:mcp:docs": "cd src/mcp/nerv-docs && npm install && npm run build",
    "preview": "electron-vite preview",
    "typecheck": "tsc --noEmit",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:integration": "vitest run test/integration/",
    "test:features": "npx playwright test --config=test/e2e/playwright.config.ts test/e2e/docs-demos.spec.ts test/e2e/docs-screenshots.spec.ts",
    "test:e2e": "bash test/scripts/run-e2e.sh --suite all",
    "test:e2e:benchmark": "bash test/scripts/run-e2e.sh --suite benchmark",
    "test:e2e:benchmark:record": "bash test/scripts/run-e2e.sh --suite benchmark --record --slow",
    "test:e2e:build": "docker build -t nerv-e2e -f test/e2e/Dockerfile .",
    "test:e2e:local": "npx playwright test --config=test/e2e/playwright.config.ts",
    "test:e2e:benchmark:local": "npx playwright test --config=test/e2e/playwright.config.ts test/e2e/benchmark.spec.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "quality": "powershell -File scripts/code-quality.ps1",
    "quality:strict": "powershell -File scripts/code-quality.ps1 -Strict",
    "docs:dev": "cd docs-site && npm run dev",
    "docs:build": "cd docs-site && npm run build",
    "docs:preview": "cd docs-site && npm run preview",
    "docs:screenshots": "npx playwright test --config=test/e2e/playwright.config.ts test/e2e/docs-screenshots.spec.ts"
  },
  "keywords": [
    "electron",
    "svelte",
    "claude",
    "ai",
    "development"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "@electron/rebuild": "^4.0.3",
    "@playwright/test": "^1.58.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "autoprefixer": "^10.4.23",
    "cross-env": "^10.1.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.2",
    "jscpd": "^4.0.8",
    "madge": "^8.0.0",
    "postcss": "^8.5.6",
    "prebuild-install": "^7.1.3",
    "svelte": "^5.48.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^3.1.0"
  },
  "dependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.57.1",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "better-sqlite3": "^12.6.2",
    "electron-updater": "^6.3.9",
    "node-pty": "^1.1.0"
  }
}
